<div class="card">
    <h2><%=@location.name%></h2>
    <p><%=@location.description%></p>
    <h2>Menus</h2>

     <% unless @menus.nil? %>
       <p> <%=@location.name%> Menus</p>
        <ul>
        <% @menus.each do |menu| %>
             <li><%= link_to menu.name, menus_path(menu)  %></li>
            <% end %>
        </ul>
    <% end %>
    <%=link_to "New Menu", menus_url(:location_id  => @location.id), class:"btn btn-light" %>
    </div>
</div>
